---
import Container from "./Container.astro";
---

<nav class="nav">
  <Container>
    <div class="nav-container">
      <div>
        <a href="/" class="max-logo">Max Taylor</a>
      </div>
      <ul class="nav-items">
        <li><a href="/projects">Projects</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </div>
  </Container>
</nav>

<style>
  nav {
    background: var(--dark);

    .max-logo {
      font-size: 1.375rem;
      font-weight: 900;
      background: -webkit-linear-gradient(-27deg, #635dff, #908bff);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-decoration: none;
      letter-spacing: -6%;
    }

    .nav-container {
      display: flex;
      padding: 24px 0;
      justify-content: space-between;
      align-items: center;

      .nav-items {
        list-style-type: none;
        display: flex;
        gap: 24px;

        a {
          text-decoration: none;
          color: var(--white);
          font-size: 1.125rem;
        }
      }

      @media screen and (max-width: 500px) {
        & {
          flex-direction: column;
          gap: 16px;
        }
      }
    }
  }
</style>
